{% extends 'base.html.twig' %}

{% block title %}Hello DoctorController!{% endblock %}

{% block body %}
<style>
    .example-wrapper {  max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; display: inline-block}
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Register a new professional</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}
</div>
<div class="example-wrapper">
    <h1>Sign in</h1>

    {{ form_start(formLogin) }}
        {{ form_widget(formLogin) }}
        <button class="btn">{{ button_label|default('Save') }}</button>
    {{ form_end(formLogin) }}
</div>
{% endblock %}


